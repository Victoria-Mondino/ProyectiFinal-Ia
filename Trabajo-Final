import openai  

openai.api_key = "tu_clave_API"

def analizar_sintomas(symptoms):  
    prompt = "Analiza los siguientes sÃ­ntomas de salud proporcionados por un usuario y genera un diagnÃ³stico preliminar junto con recomendaciones. SÃ­ntomas: " + symptoms  

    response = openai.ChatCompletion.create(  
        model="gpt-4",  
        messages=[  
            {"role": "system", "content": "Eres un asistente mÃ©dico que ayuda a analizar sÃ­ntomas de salud."},  
            {"role": "user", "content": prompt}  
        ]  
    )  
    return response["choices"][0]["message"]["content"]  



import openai

 ConfiguraciÃ³n de la clave API de OpenAI
openai.api_key = "tu_clave_API"

 FunciÃ³n para generar una descripciÃ³n textual utilizando GPT-4
def openai_chat_gpt4(prompt, texto):
    response = openai.ChatCompletion.create(
        model="gpt-4",
        messages=[
            {"role": "system", "content": prompt},
            {"role": "user", "content": texto}
        ]
    )
    return response["choices"][0]["message"]["content"]

 FunciÃ³n para generar una imagen utilizando DALL-E
def openai_image(descripcion):
    response = openai.Image.create(
        prompt=descripcion,
        n=1,
        size="512x512"
    )
    image_url = response['data'][0]['url']
    return image_url

 Prompt y texto inicial
prompt = (
    "Tu objetivo principal es, dado un texto, generar una descripciÃ³n de una imagen que pueda ser introducida como "
    "prompt en un modelo texto a imagen. La descripciÃ³n debe ser concreta, en no mÃ¡s de 200 palabras, y que pueda "
    "ser expresada mediante una imagen."
)

texto = (
    "Es una empresa que se autodefine como humanamente tecnolÃ³gica. Su misiÃ³n principal es utilizar las nuevas "
    "tecnologÃ­as para generar cambios de impacto positivo en la sociedad, haciendo siempre foco en las personas."
)

 Generar descripciÃ³n textual
descripcion_generada = openai_chat_gpt4(prompt, texto)

 Generar la imagen basada en la descripciÃ³n
url_imagen = openai_image(descripcion_generada)

 Mostrar resultados
print("ğŸ“„ DescripciÃ³n generada para la imagen:")
print(descripcion_generada)

print("\nğŸŒ URL de la imagen generada:")
print(url_imagen)
